{
    "outputDirectory": "web",
    "buildCommand": "npm run build",
    "headers": [
        {
            "headers": [
                {
                    "key": "Access-Control-Allow-Origin",
                    "value": "*"
                },
                {
                    "key": "Access-Control-Allow-Methods",
                    "value": "GET, POST, PUT, DELETE, PATCH, OPTIONS"
                },
                {
                    "key": "Access-Control-Allow-Headers",
                    "value": "Content-Type, Authorization"
                }
            ],
            "source": "/api/(.*)"
        }
    ],
    "crons": [
        {
            "path": "/api/vm-scheduler?action=run",
            "schedule": "*/10 * * * *"
        },
        {
            "path": "/api/soul-monitor?action=check",
            "schedule": "*/5 * * * *"
        },
        {
            "path": "/api/shadow-agents?action=check-stale",
            "schedule": "*/2 * * * *"
        },
        {
            "path": "/api/research-crawler?action=crawl",
            "schedule": "0 6 * * *"
        }
    ],
    "version": 2
}
